<style>
    @media only screen and (max-width: 700px){
        #centerBanako{
            margin-left: 25%;
        }
    }
    @media only screen and (max-width: 570px){
        #centerBanako{
            margin-left: 0;
        }
    }
</style>

<div style="margin-top: 80px;">
    <div class="container-fluid mb-5">
        <div class="row-center">
            <div class="col-sm-6 col-md-6 offset-3" id="centerBanako">
                <!-- Material form register -->
                <div class="card">
                    <h5 class="card-header danger-color white-text text-center py-3">
                        <strong>Log in</strong>
                    </h5>
                    <!--Card content-->
                    <div class="card-body px-lg-5 pt-0">
                        <!-- Form -->
                        <form class="text-center" style="color: #757575;" action="/login" method="POST">
                            {{#if messages.error }}
                                <h5 class="display-6 font-weight-600 text-center alert-danger" style="color: red; margin: 5px 0 5px 0; padding: 5px 0 5px 0; letter-spacing: 1px; border-radius: 10px;">
                                    {{messages.error}}
                                </h5>
                            {{/if}}
                            <div class="form-row">
                                <div class="col">
                                    <!-- Username -->
                                    <div class="md-form">
                                        <input type="text" id="materialRegisterFormUsername" class="form-control" name="username">
                                        <label for="materialRegisterFormUserame">Username</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col">
                                    <!-- Password -->
                                    <div class="md-form">
                                        <input type="password" id="materialRegisterFormPassword" class="form-control" name="password">
                                        <label for="materialRegisterFormPassword">Password</label>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-danger btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit" style="font-size: 15px;">Log in</button>
                        </form>
                        <!-- Form -->
                    </div>
                </div>
                <!-- Material form register -->
            </div>
        </div>
    </div>
    <div class="container-fluid" id="container2">
        <!-- Jumbotron -->
        <div class="jumbotron text-center grey darken-3 white-text mx-2 mb-5">
            <!-- Title -->
            <h4>Don't have an account??</h4>
            <h2 class="card-title h2">JOIN WITH US AND SAVE LIFE</h2>
            <div class="pt-2">
                <button type="button" class="btn btn-danger btn-rounded"><a href="./register" style="color: white; font-size: 15px;">Register</a></button>
            </div>
            <hr class="my-4 rgba-white-light">
        </div>
        <!-- Jumbotron -->
    </div>
</div>